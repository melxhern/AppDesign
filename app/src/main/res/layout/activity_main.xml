<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/background">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_bold"
        android:text="@string/suitable_watch"
        android:textColor="@color/black"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight="96dp"
        app:layout_constraintHorizontal_bias=".2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.085"
        app:layout_constraintWidth="303dp" />

    <TextView
        android:id="@+id/smartwatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_semibold"
        android:text="@string/smart_watch"
        android:textColor="@color/purple"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight="24dp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.221"
        app:layout_constraintWidth="100dp" />

    <LinearLayout
        android:id="@+id/vertical_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/smartwatch">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="213dp"
            android:layout_marginVertical="50dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="157dp"
                android:layout_height="213dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Vertical Layout 1 -->
                <ImageView
                    android:layout_width="141dp"
                    android:layout_height="101dp"
                    android:layout_gravity="center"
                    android:background="@drawable/arrondi_1"
                    android:src="@drawable/series_7_small" />

                <TextView
                    android:layout_width="96dp"
                    android:layout_height="19dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/raleway_semibold"
                    android:gravity="left"
                    android:text="Title 1"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Subtitle 1"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:textSize="12dp"
                    android:textColor="@color/subtitle"
                    android:fontFamily="@font/raleway_medium"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Price 1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="157dp"
                android:layout_height="213dp"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Vertical Layout 2 -->
                <ImageView
                    android:id="@+id/watch_2"
                    android:layout_width="141dp"
                    android:layout_height="101dp"
                    android:layout_gravity="center"
                    android:background="@drawable/arrondi_2"
                    android:src="@drawable/series_4" />

                <TextView
                    android:layout_width="96dp"
                    android:layout_height="19dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/raleway_semibold"
                    android:gravity="left"
                    android:text="Title 2"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Subtitle 2"
                    android:layout_marginTop="10dp"
                    android:textSize="12dp"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/subtitle"
                    android:fontFamily="@font/raleway_medium"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Price 2" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>